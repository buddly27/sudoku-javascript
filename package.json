{
    "name": "sudoku-javascript",
    "version": "0.1.0",
    "description": "Sudoku Solver",
    "main": "./dist/sudoku.min.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/buddly27/sudoku-javascript.git"
    },
    "engines": {
        "npm": ">=3"
    },
    "files": [
        "resource",
        "dist"
    ],
    "author": "Jeremy Retailleau",
    "scripts": {
        "clean:all": "npm run analyze:clean && npm run test:clean && npm run build:clean",
        "prebuild": "npm run build:clean && npm run test",
        "build": "webpack --config resource/webpack_config.js --color -p --progress",
        "build:clean": "npm run test:clean && rimraf ./dist",
        "lint": "npm run lint:js",
        "lint:eslint": "eslint --ignore-path .gitignore --ignore-pattern resource/script",
        "lint:js": "npm run lint:eslint -- . ",
        "lint:staged": "lint-staged",
        "pretest": "npm run test:clean && npm run lint",
        "test:clean": "rimraf ./coverage",
        "test": "jest --coverage",
        "test:watch": "jest --watchAll",
        "coveralls": "cat ./coverage/lcov/lcov.info | coveralls"
    },
    "lint-staged": {
        "*.js": "lint:eslint"
    },
    "pre-commit": "lint:staged",
    "babel": {
        "presets": [
            ["latest", {"es2015": {"modules": false}}], "stage-0"
        ],
        "env": {
            "production": {
                "only": ["source"]
            },
            "test": {
                "plugins": [
                    "transform-es2015-modules-commonjs",
                    "dynamic-import-node"
                ]
            }
        }
    },
    "eslintConfig": {
        "parser": "babel-eslint",
        "extends": "airbnb-base",
        "env": {
            "browser": true,
            "node": true,
            "es6": true,
            "jest": true
        },
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module"
        },
        "rules": {
            "arrow-parens": ["error", "always"],
            "arrow-body-style": [2, "as-needed"],
            "brace-style": ["error", "stroustrup", {"allowSingleLine": true}],
            "comma-dangle": [2, "always-multiline"],
            "no-underscore-dangle": "off",
            "import/imports-first": 0,
            "import/newline-after-import": 0,
            "import/no-extraneous-dependencies": 0,
            "import/no-named-as-default": 0,
            "import/no-unresolved": 2,
            "import/prefer-default-export": 0,
            "indent": ["warn", 4, {"SwitchCase": 1}],
            "max-len": 0,
            "newline-per-chained-call": 0,
            "no-console": 1,
            "no-use-before-define": 0,
            "object-curly-spacing": ["error", "never"],
            "prefer-template": 2,
            "quotes": ["error", "double", {"allowTemplateLiterals": true}],
            "class-methods-use-this": 0,
            "require-yield": 0
        },
        "settings": {
            "import/resolver": {
                "node": {
                    "moduleDirectory": ["node_modules", "source"]
                }
            }
        }
    },
    "jest": {
        "collectCoverageFrom": [
            "source/sudoku/**/*.{js}"
        ],
        "coverageThreshold": {
            "global": {
                "statements": 90,
                "branches": 80,
                "functions": 90,
                "lines": 90
            }
        },
        "moduleDirectories": ["node_modules", "source"],
        "setupTestFrameworkScriptFile": "<rootDir>/resource/test_bundler.js",
        "roots":["test"],
        "testRegex": "./test/.*\\.test\\.js$"
    },
    "dependencies": {
        "iter-tools": "1.3.0",
        "lodash": "4.17.4"
    },
    "devDependencies": {
        "babel-cli": "6.24.1",
        "babel-core": "6.25.0",
        "babel-eslint": "7.2.3",
        "babel-loader": "7.1.1",
        "babel-polyfill": "6.20.0",
        "babel-plugin-dynamic-import-node": "1.0.2",
        "babel-plugin-transform-es2015-modules-commonjs": "6.24.1",
        "babel-plugin-transform-runtime": "6.23.0",
        "babel-preset-latest": "6.24.1",
        "babel-preset-node6": "11.0.0",
        "babel-preset-stage-0": "6.24.1",
        "coveralls": "2.13.1",
        "eslint": "4.1.1",
        "eslint-config-airbnb-base": "11.2.0",
        "eslint-import-resolver-webpack": "0.8.3",
        "eslint-plugin-import": "2.7.0",
        "jest-cli": "20.0.4",
        "lint-staged": "4.0.1",
        "pre-commit": "1.2.2",
        "rimraf": "2.6.1",
        "webpack": "3.1.0"
    }
}
